@model LibraryBookStore.Models.Hold.HoldModel

<div class="container">
    <div class="header clearfix">
        <h3 class="text-muted">Place Hold</h3>
    </div>
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <div>
                    <p>@Model.Title</p>
                    <img src="@Model.ImageUrl" style="width:90%" />
                </div>
            </div>
            <div class="col-md-9">
                <div>
                    <p>There are currently @Model.NumberOfHolds holds on the queue for this item.</p>
                </div>
                @using (Html.BeginForm("Hold", "Catalog", FormMethod.Post))
                {
                    @Html.HiddenFor(a => a.AssetId)
                    <div>
                        Please enter Library Card ID
                        @Html.TextBoxFor(a => a.LibraryCardId)
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success btn-lg">Place Hold</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>