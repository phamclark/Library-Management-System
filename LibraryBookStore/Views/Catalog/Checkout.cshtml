@model LibraryBookStore.Models.Checkout.CheckoutModel

<div class="container">
    <div class="header clearfix">
        <h3 class="text-muted">Checkout Item</h3>
    </div>
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3">
                <div>
                    <p>@Model.Title</p>
                    <img src="@Model.ImageUrl" style="width:90%" />
                </div>
            </div>
            <div class="col-md-9">
                @using (Html.BeginForm("CheckOut", "Catalog", FormMethod.Post))
                {
                    @Html.HiddenFor(a=>a.AssetId)
                    <div>
                        Please enter Library Card ID
                        @Html.TextBoxFor(a=>a.LibraryCardId)
                    </div>
                    <div>
                        <button type="submit" class="btn btn-success btn-lg">Check out</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>